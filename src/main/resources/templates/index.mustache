{{>layout/header}}

    <div class="p-4">
        <h1>스프링 부트로 시작하는 웹 서비스</h1>
    </div>

    <div class="col-md-12">
        <div class="row px-4">
            <div class="col-md-12 px-0 mb-4 d-md-flex justify-content-md-end">
                <a href="/posts/save" role="button" class="btn btn-primary btn-lg me-md-2">
                    글 등록
                </a>
            </div>
            <!-- 목록 출력 영역 -->
            <table class="table table-horizontal table-bordered">
                <thead class="thead-strong">
                    <tr>
                        <th>게시글 번호</th>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>최종 수정일</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    {{#posts}}              <!-- posts라는 List 순회 (for문 역할) -->
                    <tr>
                        <td>{{id}}</td>
                        <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                    {{/posts}}
                </tbody>
            </table>
        </div>
    </div>

{{>layout/footer}}
